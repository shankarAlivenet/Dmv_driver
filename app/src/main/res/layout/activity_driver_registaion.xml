                    android:textColorHint="@color/White" />-->
                <EditText
                    android:id="@+id/edit_nameinsu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@mipmap/edittext_bg"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:hint="Name of Insurance"
                    android:inputType="text"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:textSize="14sp"
                    android:paddingTop="5dp"
                    android:textColor="@color/textcolor"
                    android:textColorHint="@color/textcolor" />


                <EditText
                    android:id="@+id/edit_proofinsu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@mipmap/edittext_bg"
                    android:hint="Proof of Insurance"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:textSize="14sp"
                    android:paddingTop="5dp"
                    android:textColor="@color/textcolor"
                    android:textColorHint="@color/textcolor" />

                <EditText
                    android:id="@+id/edit_vehicle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@mipmap/edittext_bg"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:hint="Taxi Model"
                    android:inputType="text"
                    android:paddingBottom="5dp"
                    android:singleLine="true"
                    android:paddingLeft="10dp"
                    android:textSize="14sp"
                    android:paddingTop="5dp"
                    android:textColor="@color/textcolor"
                    android:textColorHint="@color/textcolor" />



                <Spinner
                    android:id="@+id/cabspinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@mipmap/edittext_bg"
                    android:padding="10dp"
                    android:textSize="14sp"
                    android:textColor="@color/textcolor" />

                <EditText
                    android:id="@+id/edit_tabstate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@mipmap/edittext_bg"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:hint="Tab # &amp; State "
                    android:singleLine="true"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:textSize="14sp"
                    android:paddingTop="5dp"
                    android:textColor="@color/textcolor"
                    android:textColorHint="@color/textcolor" />
                <EditText
                    android:id="@+id/edit_pvin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@mipmap/edittext_bg"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:hint="PVIN "
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:textSize="14sp"
                    android:paddingTop="5dp"
                    android:textColor="@color/textcolor"
                    android:textColorHint="@color/textcolor" />

                <Button
                    android:id="@+id/btndriver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:background="@drawable/button_selector"
                    android:text="SAVE"
                    android:textColor="@color/textcolor"
                    android:textSize="15dp" />





            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>